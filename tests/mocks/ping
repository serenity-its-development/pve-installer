#!/bin/bash
#
# Mock ping command for testing
#

# Simulate successful ping by default
# Set MOCK_PING_FAIL=1 to simulate network failure

if [[ "${MOCK_PING_FAIL:-0}" == "1" ]]; then
    echo "ping: network unreachable"
    exit 1
fi

echo "PING $2 (1.2.3.4) 56(84) bytes of data."
echo "64 bytes from 1.2.3.4: icmp_seq=1 ttl=64 time=0.1 ms"
exit 0
